---
const { content } = Astro.props;
const { hero, primaryPlan, enterprise } = content;
---

<section class="mx-auto max-w-6xl px-4 py-16 space-y-8">
  <div class="max-w-2xl space-y-3">
    <h1 class="text-3xl md:text-4xl font-semibold tracking-tight text-slate-50">
      {hero.title}
    </h1>
    <p class="text-sm md:text-base text-slate-300">
      {hero.subtitle}
    </p>
  </div>

  <div class="grid gap-6 md:grid-cols-[minmax(0,1.2fr)_minmax(0,1fr)]">
    <div
      class="rounded-2xl border border-indigo-500/60 bg-slate-900/80 p-6
             shadow-xl shadow-indigo-500/30 transition-transform duration-200
             hover:-translate-y-1 hover:shadow-2xl hover:shadow-indigo-500/50"
    >
      <p class="text-xs font-medium uppercase tracking-[0.2em] text-indigo-300 mb-2">
        {primaryPlan.labelBadge}
      </p>
      <div class="flex items-baseline gap-2 mb-3">
        <span class="text-3xl font-semibold text-slate-50">{primaryPlan.price}</span>
        <span class="text-xs text-slate-400">{primaryPlan.period}</span>
      </div>
      <p class="text-xs text-slate-300 mb-4">
        {primaryPlan.description}
      </p>
      <ul class="space-y-2 text-xs text-slate-200 mb-5">
        {primaryPlan.bullets.map((item) => (
          <li>✔ {item}</li>
        ))}
      </ul>
      <a
        href="#"
        class="inline-flex w-full items-center justify-center rounded-full bg-indigo-500 px-4 py-2 text-sm font-medium text-slate-950 hover:bg-indigo-400 transition"
      >
        {primaryPlan.ctaLabel}
      </a>
      <p class="mt-3 text-[11px] text-slate-400">
        14-day free trial · No credit card required · Cancel anytime
      </p>
    </div>

    <div
      class="rounded-2xl border border-slate-800 bg-slate-900/70 p-6 text-sm space-y-3
             transition-transform duration-200 hover:-translate-y-0.5"
    >
      <h2 class="font-medium text-slate-50">{enterprise.title}</h2>
      <p class="text-xs text-slate-300">
        {enterprise.body}
      </p>
      <a
        href={enterprise.linkHref}
        class="text-xs text-indigo-300 hover:text-indigo-200 underline underline-offset-4"
      >
        {enterprise.linkLabel}
      </a>
    </div>
  </div>
</section>
